@model forum.Domain.Entities.Post

@{
    ViewBag.Title = "EditPost";
}

<h2>EditPost</h2>


@using (Html.BeginForm("SavePost", "Post"))
{

    @Html.HiddenFor(m => m.IdPost)
    @Html.HiddenFor(m => m.UserName)
    @Html.HiddenFor(m => m.IdThread)
    @Html.HiddenFor(m => m.DateTime)
    <textarea class="form-control" rows="5" cols="100" style="background-color:aliceblue; min-width:80%" name="Description">@Model.Description</textarea>
    
    <input type="submit" class="btn btn-success" value="Save Post" />
}