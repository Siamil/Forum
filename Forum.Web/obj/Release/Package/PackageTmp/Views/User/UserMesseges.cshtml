@model Forum.Web.Models.UserMessegesViewModel

@{
    ViewBag.Title = "Your messeges";
}

<h2 class="text-center modal-title">Your Messeges</h2>
<div class="col-xs-6">
    <table class="table table-bordered " style="vertical-align; float:left">
        <thead>
            <tr>
                <th>Subject</th>
                <th>To</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.userMessegesSent)
            {
                <tr>
                    <td>@Html.ActionLink(item.Subject, "ShowMessege", new { messegeId = item.ID })</td>
                    <td>@Html.ActionLink(@item.To, "Users", new { userName = item.To })</td>
        </tr>

            }

        </tbody>
    </table>
</div>
<div class="col-xs-6">
    <table class="table table table-bordered " style="vertical-align; float:left">
        <thead>
            <tr>
                <th>Subject</th>
                <th>From</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.userMessegesRec)
            {
                <tr>
                    <td>@Html.ActionLink(item.Subject, "ShowMessege", new { messegeId = item.ID })</td>
                    <td>@Html.ActionLink(@item.From, "Users", new { userName = item.From })</td>
                </tr>

            }

        </tbody>
    </table>
</div>