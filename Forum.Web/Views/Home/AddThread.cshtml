@model forum.Domain.Entities.Thread

@{
    ViewBag.Title = "AddThread";
}

<h2>AddThread</h2>
@using (Html.BeginForm("SaveThread", "Home", new { sectionId = ViewBag.Id }))
{
<div class="form-group">
    @Html.LabelFor(m => m.ThreadName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.ThreadName, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
    </div>
</div>
    <input type="submit" value="Save Thread" />
}
